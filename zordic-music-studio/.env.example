# Zordic Music Studio - Environment Configuration Template
# Copy this file to .env and update with your configuration

# ============================================
# Server Configuration
# ============================================
PORT=3000
NODE_ENV=development
HOST=0.0.0.0

# ============================================
# AgentDB Configuration
# ============================================
AGENTDB_HOST=localhost
AGENTDB_PORT=5432
AGENTDB_DATABASE=zordic_music
AGENTDB_COLLECTION_PREFIX=zordic_

# Vector Search Configuration
AGENTDB_VECTOR_DIMENSION=384
AGENTDB_INDEX_TYPE=hnsw
AGENTDB_QUANTIZATION=binary
AGENTDB_METRIC=cosine

# ============================================
# Redis Configuration (Caching & Sessions)
# ============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_TTL=3600

# ============================================
# PostgreSQL Configuration (Relational Data)
# ============================================
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DATABASE=zordic_music
POSTGRES_USER=zordic
POSTGRES_PASSWORD=change_me_in_production
POSTGRES_SSL=false
POSTGRES_POOL_MIN=2
POSTGRES_POOL_MAX=10

# ============================================
# Authentication & Security
# ============================================
JWT_SECRET=your_super_secret_jwt_key_change_in_production
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d
SESSION_SECRET=your_super_secret_session_key_change_in_production
BCRYPT_ROUNDS=10

# ============================================
# File Upload & Storage
# ============================================
MAX_FILE_SIZE=50MB
UPLOAD_DIR=./uploads
TEMP_DIR=./temp
EXPORT_DIR=./exports
SAMPLES_DIR=./public/samples

# Allowed file types
ALLOWED_AUDIO_TYPES=audio/wav,audio/mp3,audio/ogg,audio/flac
ALLOWED_VIDEO_TYPES=video/mp4,video/webm
ALLOWED_IMAGE_TYPES=image/png,image/jpeg,image/gif

# ============================================
# AWS S3 (Optional - for cloud storage)
# ============================================
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_S3_BUCKET=zordic-music-uploads
AWS_S3_CDN_URL=

# ============================================
# Logging Configuration
# ============================================
LOG_LEVEL=info
LOG_DIR=./logs
LOG_MAX_FILES=10
LOG_MAX_SIZE=10m

# ============================================
# CORS Configuration
# ============================================
FRONTEND_URL=http://localhost:3001
CORS_ORIGINS=http://localhost:3001,http://localhost:3000
CORS_CREDENTIALS=true

# ============================================
# Feature Flags
# ============================================
ENABLE_COLLABORATION=true
ENABLE_VIDEO_EXPORT=true
ENABLE_AI_RECOMMENDATIONS=true
ENABLE_MIDI_EXPORT=true
ENABLE_CLOUD_BACKUP=false
ENABLE_SOCIAL_SHARING=true
ENABLE_ANALYTICS=true

# ============================================
# AI Agent Configuration
# ============================================
# Pattern Learning Agent
PATTERN_AGENT_THRESHOLD=0.7
PATTERN_AGENT_MAX_RECOMMENDATIONS=10
PATTERN_AGENT_LEARNING_RATE=0.8

# Beat Coordinator Agent
BEAT_AGENT_VARIATION_COUNT=3
BEAT_AGENT_COMPLEXITY_THRESHOLD=0.6

# Melody Agent
MELODY_AGENT_KEY_SUGGESTIONS=5
MELODY_AGENT_HARMONY_CONFIDENCE=0.75

# Teacher Agent
TEACHER_AGENT_ASSESSMENT_THRESHOLD=0.7
TEACHER_AGENT_FEEDBACK_DETAIL=medium
TEACHER_AGENT_DIFFICULTY_ADAPTATION=true

# ============================================
# Audio Processing
# ============================================
AUDIO_SAMPLE_RATE=44100
AUDIO_BIT_DEPTH=16
AUDIO_CHANNELS=2
AUDIO_FORMAT=wav

# Export Quality Presets
EXPORT_QUALITY_LOW=128
EXPORT_QUALITY_MEDIUM=256
EXPORT_QUALITY_HIGH=320

# ============================================
# Visual Rendering
# ============================================
VIDEO_DEFAULT_WIDTH=1920
VIDEO_DEFAULT_HEIGHT=1080
VIDEO_DEFAULT_FPS=60
VIDEO_DEFAULT_CODEC=h264
VIDEO_DEFAULT_BITRATE=5000000

# Particle System
PARTICLE_MAX_COUNT=1000
PARTICLE_PHYSICS_ENABLED=true

# ============================================
# Collaboration
# ============================================
MAX_USERS_PER_SESSION=4
COLLABORATION_SYNC_INTERVAL=50
COLLABORATION_TIMEOUT=300000

# ============================================
# Rate Limiting
# ============================================
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_ENABLE=true

# ============================================
# Email Configuration (Optional)
# ============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
EMAIL_FROM=noreply@zordic-music.studio

# ============================================
# Analytics & Monitoring (Optional)
# ============================================
GOOGLE_ANALYTICS_ID=
SENTRY_DSN=
MIXPANEL_TOKEN=
DATADOG_API_KEY=

# ============================================
# Development & Debug
# ============================================
DEBUG=false
VERBOSE_LOGGING=false
PROFILE_PERFORMANCE=false
MOCK_AI_AGENTS=false

# ============================================
# Testing Configuration
# ============================================
TEST_DATABASE=zordic_music_test
TEST_REDIS_DB=1
TEST_PORT=3001
TEST_TIMEOUT=30000

# ============================================
# Production Deployment
# ============================================
# Uncomment and configure for production deployment
# NODE_ENV=production
# PORT=8080
# POSTGRES_SSL=true
# REDIS_PASSWORD=your_secure_redis_password
# JWT_SECRET=your_production_jwt_secret_at_least_32_characters
# SESSION_SECRET=your_production_session_secret_at_least_32_characters
# ENABLE_CLOUD_BACKUP=true
# AWS_ACCESS_KEY_ID=your_aws_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret
# SENTRY_DSN=your_sentry_dsn
